<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="mystuff" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.caeldev.domain.ContentType</class>
        <class>com.caeldev.domain.Label</class>
        <class>com.caeldev.domain.Profile</class>
        <class>com.caeldev.domain.StorageAccount</class>
        <class>com.caeldev.domain.StorageProvider</class>
        <class>com.caeldev.domain.User</class>
    </persistence-unit>
</persistence>